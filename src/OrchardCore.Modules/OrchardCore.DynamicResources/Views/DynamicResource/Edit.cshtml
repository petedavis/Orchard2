@model DynamicResourceViewModel

@{
    var returnUrl = ViewData["returnUrl"]?.ToString();
}

<script asp-name="codemirror" depends-on="admin" at="Foot"></script>
<script asp-name="codemirror-mode-css" at="Foot"></script>
<script asp-name="codemirror-mode-javascript" at="Foot"></script>
<script asp-name="codemirror-addon-display-autorefresh" at="Foot"></script>
<script asp-name="codemirror-addon-mode-simple" at="Foot"></script>
<script asp-name="codemirror-addon-mode-multiplex" at="Foot"></script>
<script asp-name="codemirror-mode-xml" at="Foot"></script>

<script asp-src="~/OrchardCore.DynamicResources/dynamicresource.edit.js" at="Foot"></script>

<h1>@RenderTitleSegments(T["Edit Resource"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Edit" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">

    @Html.HiddenFor(m => m.SourceName)
    @Html.HiddenFor(m => m.ContentType)

    <div class="form-group" asp-validation-class-for="NameWithoutExtension">
        <label asp-for="NameWithoutExtension">@T["Name"]</label>
        <span asp-validation-for="NameWithoutExtension" class="text-danger">@T["The name is required."]</span>
        
        <div class="input-group">
            <input asp-for="NameWithoutExtension" class="form-control" /> 
            <div class="input-group-append">
                <span class="input-group-text">@Model.ContentTypeDefinition.Extension</span>
            </div>
        </div>
        <span class="hint">@T["The name of the resource."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="Description">
        <label asp-for="Description">@T["Description"]</label>
        <input asp-for="Description" class="form-control" />
        <span class="hint">@T["The description of the resource."]</span>
    </div>
    
    <div class="form-group" asp-validation-class-for="Content">
        <label asp-for="Content">@T["Content"]</label>
        <textarea asp-for="Content" rows="10" class="form-control" autofocus></textarea>
        <span class="hint">@T["The resource template."]</span>
    </div>

    <fieldset>
        <div class="form-group">
            <div class="btn-group">
                <button type="submit" name="submit" class="btn btn-secondary">@T["Save"]</button>
                <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-reference="parent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">@T["Toggle Dropdown"]</span>
                </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item" name="submit" type="submit" value="SaveAndContinue">@T["and continue"]</button>
                </div>
            </div>

            @if (Url.IsLocalUrl(returnUrl))
            {
                <a class="btn btn-secondary" href="@returnUrl">@T["Cancel"]</a>
            }
        </div>
    </fieldset>
</form>

<script at="Foot">
    $(function () {
        initializeResourceEditor(
            document.getElementById('@Html.IdFor(x => x.ContentType)'),
            document.getElementById('@Html.IdFor(x => x.Content)'));
    });
</script>